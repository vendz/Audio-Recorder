<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioRecorder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.MyApp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#6F9CC4</item>
    </style>

    <style name="MyListBtn">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/black_bg</item>
    </style>

    <style name="MyMicBtn">
        <item name="android:background">@color/black_bg</item>
    </style>

    <style name="RecViewBg">
        <item name="background">@color/black_bg</item>
    </style>

</resources>